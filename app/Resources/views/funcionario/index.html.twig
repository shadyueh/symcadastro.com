{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Funcionários</h2>

    <div class="btn-group" style="margin-bottom:15px">
        <a class="btn btn-primary" href="{{ path('funcionario_new') }}" role="button" aria-label="Adicionar">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Endereço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td><a href="{{ path('funcionario_show', { 'id': funcionario.id }) }}">{{ funcionario.id }}</a></td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.cpf }}</td>
                <td>{% if funcionario.dataNascimento %}{{ funcionario.dataNascimento|date('d/m/Y') }}{% endif %}</td>
                <td>{{ funcionario.endereco }}</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-info" href="{{ path('funcionario_show', { 'id': funcionario.id }) }}" role="button" aria-label="Visualizar">
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-primary" href="{{ path('funcionario_edit', { 'id': funcionario.id }) }}" role="button" aria-label="Editar">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
