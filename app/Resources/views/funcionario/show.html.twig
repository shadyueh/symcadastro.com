{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Funcionário #{{ funcionario.id }}</h2>

    <ul class="nav nav-pills" style="margin-bottom:15px">
        <li>
        <a class="btn btn-primary" href="{{ path('funcionario_index') }}" role="button" aria-label="Lista">
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Lista
        </a>
        </li>
        <li>
        <a class="btn btn-primary" href="{{ path('funcionario_edit', { 'id': funcionario.id }) }}" role="button" aria-label="Editar">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
        </a>
        </li>
        <li>
        {{ form_start(delete_form) }}
            <button class="btn btn-danger" type="submit" ><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Apagar</button>
        {{ form_end(delete_form) }}
        </li>
    </ul>


    <table class="table table-striped">
        <tbody>
            <tr>
                <th class="col-md-3">Nome</th>
                <td>{{ funcionario.nome }}</td>
            </tr>
            <tr>
                <th>CPF</th>
                <td>{{ funcionario.cpf }}</td>
            </tr>
            <tr>
                <th>Data de Nascimento</th>
                <td>{% if funcionario.dataNascimento %}{{ funcionario.dataNascimento|date('d/m/Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endereço</th>
                <td>{{ funcionario.endereco }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
