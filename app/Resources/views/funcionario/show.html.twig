{% extends 'base.html.twig' %}

{% block body %}
    <h1>Funcionario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ funcionario.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ funcionario.nome }}</td>
            </tr>
            <tr>
                <th>Cpf</th>
                <td>{{ funcionario.cpf }}</td>
            </tr>
            <tr>
                <th>Datanascimento</th>
                <td>{% if funcionario.dataNascimento %}{{ funcionario.dataNascimento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endereco</th>
                <td>{{ funcionario.endereco }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('funcionario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('funcionario_edit', { 'id': funcionario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
